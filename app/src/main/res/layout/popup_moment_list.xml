<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="36dp">
    <LinearLayout
        android:id="@+id/ll_momentList_moreFavor"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/circle_favor1"/>
        <TextView
            android:id="@+id/tv_momentList_moreFavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="赞" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_momentList_moreComment"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/circle_comment1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="评论" />
    </LinearLayout>
    <View
        android:id="@+id/view_momentList_dismiss"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="#00ffffff"/>
</LinearLayout>